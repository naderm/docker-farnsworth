#!/bin/sh

set -e

if [ -z "$1" ]
then
	echo "Usage: restore <file>"
	exit 1
fi

cd "$(dirname $(readlink -f "$0"))/../"

docker-compose stop
mkdir -p pg_data
chcon -Rt svirt_sandbox_file_t pg_data
docker-compose up -d db
sleep 5
#docker-compose exec db pg_restore -C -h localhost -U postgres -d postgres "$1"
DOCKER_DB_NAME="$(docker-compose ps -q db)"
docker exec -i "${DOCKER_DB_NAME}" pg_restore -C -U postgres -d postgres < "$1"
docker-compose stop db
