#!/bin/sh

set -e

if [ -z "$1" ]
then
	echo "Usage: backup <file>"
	exit 1
fi

cd "$(dirname $(readlink -f "$0"))/../"

#fig exec db pg_dump -Fc -h localhost -U postgres docker > "$1"
DOCKER_DB_NAME="$(fig ps | grep db | awk '{ print $1 }')"
docker exec "${DOCKER_DB_NAME}" pg_dump -Fc -U postgres docker > "$1"
